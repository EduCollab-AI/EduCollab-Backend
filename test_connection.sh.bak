#!/bin/bash

echo "üîç Testing Railway ‚Üí Supabase Connection"
echo "========================================"
echo ""

# Test 1: Health Check
echo "1Ô∏è‚É£ Testing Health Endpoint..."
HEALTH_RESPONSE=$(curl -s https://educollab-backend-production.up.railway.app/health)
if [ "$HEALTH_RESPONSE" = "OK" ]; then
    echo "   ‚úÖ Health check passed: $HEALTH_RESPONSE"
else
    echo "   ‚ùå Health check failed: $HEALTH_RESPONSE"
fi
echo ""

# Test 2: Registration Endpoint
echo "2Ô∏è‚É£ Testing Registration Endpoint..."
TIMESTAMP=$(date +%s)
REGISTER_RESPONSE=$(curl -s -X POST https://educollab-backend-production.up.railway.app/api/v1/auth/register \
  -H "Content-Type: application/json" \
  -d "{
    \"email\": \"test_${TIMESTAMP}@example.com\",
    \"password\": \"Test123456!\",
    \"firstName\": \"Test\",
    \"lastName\": \"Connection\",
    \"role\": \"parent\",
    \"phone\": \"1234567890\"
  }")

if echo "$REGISTER_RESPONSE" | grep -q '"success":true'; then
    echo "   ‚úÖ Registration successful!"
    echo "   Response: $REGISTER_RESPONSE" | head -c 200
    echo "..."
elif echo "$REGISTER_RESPONSE" | grep -q "Failed to resolve"; then
    echo "   ‚ùå Connection failed: Environment variables not set correctly"
    echo "   Error: $REGISTER_RESPONSE"
elif echo "$REGISTER_RESPONSE" | grep -q "Failed to create user"; then
    echo "   ‚ö†Ô∏è  Supabase Auth API connection issue"
    echo "   Error: $REGISTER_RESPONSE"
else
    echo "   ‚ö†Ô∏è  Unexpected response:"
    echo "   $REGISTER_RESPONSE"
fi
echo ""

echo "========================================"
echo "üìã Next Steps:"
echo "1. Check Railway Dashboard ‚Üí Variables tab"
echo "2. Verify SUPABASE_URL, SUPABASE_SERVICE_KEY, DATABASE_URL are set"
echo "3. Check Railway logs for detailed error messages"
echo "4. Wait for redeployment if you just updated variables"

